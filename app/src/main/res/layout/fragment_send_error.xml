<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SendErrorFragment">

    <EditText
        android:id="@+id/send_error_edt_text"
        style="@style/EdtText"
        android:layout_marginTop="20dp"
        android:background="@drawable/styles_edt_text"
        android:hint="Опишите ошибку"
        android:layout_height="0dp"
        android:textColorHint="@color/colorGray"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        style="@style/EdtText"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/styles_edt_text"
        app:layout_constraintBottom_toTopOf="@+id/send_news_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/send_news_btn"
        style="@style/btn"
        android:background="@drawable/button_background"
        android:text="@string/btn_text_send_error"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>