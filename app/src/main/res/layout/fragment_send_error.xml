<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.user.SendErrorFragment">

    <EditText
        android:id="@+id/send_error_edit_text"
        style="@style/EdtText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Describe_error"
        android:background="@drawable/styles_edt_text"
        android:inputType="text"
        android:textColorHint="@color/colorGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/send_error_btn"
        style="@style/btn"
        android:background="@drawable/button_background"
        android:text="@string/send_error_btn_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/send_error_edit_text" />

</androidx.constraintlayout.widget.ConstraintLayout>