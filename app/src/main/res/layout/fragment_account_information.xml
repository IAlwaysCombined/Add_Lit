<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AccountInformationFragment">


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/circle_view_image_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginVertical="20dp"
        android:src="@drawable/password"
        app:civ_border="true"
        app:civ_border_color="@color/colorGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/bio_email_text_view"
        style="@style/informationAccountEdtText"
        android:layout_marginVertical="20dp"
        android:background="@drawable/style_text_view_bio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/circle_view_image_profile" />

    <TextView
        android:id="@+id/bio_name_text_view"
        style="@style/informationAccountEdtText"
        android:background="@drawable/style_text_view_bio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bio_email_text_view" />

    <TextView
        android:id="@+id/bio_course_text_view"
        style="@style/informationAccountEdtText"
        android:background="@drawable/style_text_view_bio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bio_name_text_view" />


</androidx.constraintlayout.widget.ConstraintLayout>