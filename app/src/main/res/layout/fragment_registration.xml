<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registration_main_constrain_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.RegistrationFragment">

    <TextView
        android:id="@+id/registration_start_view"
        style="@style/largeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/registration_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:textColorHint="@color/colorGray"
        android:id="@+id/bio_email_text_view_user"
        style="@style/EdtText"
        android:background="@drawable/styles_edt_text"
        android:drawableEnd="@drawable/email"
        android:hint="@string/email_text"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registration_start_view" />

    <EditText
        android:textColorHint="@color/colorGray"
        android:id="@+id/registration_password_edt_text"
        style="@style/EdtText"
        android:background="@drawable/styles_edt_text"
        android:drawableEnd="@drawable/password"
        android:hint="@string/password_text"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bio_email_text_view_user" />

    <EditText
        android:textColorHint="@color/colorGray"
        android:id="@+id/registration_name_edt_text"
        style="@style/EdtText"
        android:background="@drawable/styles_edt_text"
        android:drawableEnd="@drawable/name"
        android:hint="@string/name_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registration_password_edt_text" />

    <EditText
        android:textColorHint="@color/colorGray"
        android:id="@+id/registration_course_edt_text"
        style="@style/EdtText"
        android:background="@drawable/styles_edt_text"
        android:digits="1234"
        android:drawableEnd="@drawable/course"
        android:hint="@string/course_text"
        android:maxLength="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registration_name_edt_text" />

    <Button
        android:id="@+id/registration_btn"
        style="@style/btn"
        android:background="@drawable/button_background"
        android:text="@string/btn_registration_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registration_course_edt_text" />

    <TextView
        android:id="@+id/registration_auth"
        style="@style/smallText"
        android:text="@string/auth_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registration_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>